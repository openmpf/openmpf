<configuration>
    <statusListener class="ch.qos.logback.core.status.NopStatusListener" />

    <if condition='isNull("javaTestDetectionLogFile")' >
        <then>
            <property name="javaTestDetectionLogFile" value="${MPF_LOG_PATH}/${THIS_MPF_NODE}/log/java-test-detection.log" />
        </then>
    </if>
    <!-- Logging configuration -->
    <appender name="STDOUT-INFO" class="ch.qos.logback.core.ConsoleAppender">
        <Target>System.out</Target>
        <filter class="ch.qos.logback.classic.filter.LevelFilter">
            <level>INFO</level>
            <onMatch>ACCEPT</onMatch>
            <onMismatch>DENY</onMismatch>
        </filter>
        <encoder>
	  <pattern>%d %p [%thread] %logger{36} - %msg%n</pattern>
        </encoder>
    </appender>
    <appender name="STDOUT-DEBUG" class="ch.qos.logback.core.ConsoleAppender">
        <Target>System.out</Target>
        <filter class="ch.qos.logback.classic.filter.LevelFilter">
            <level>DEBUG</level>
            <onMatch>ACCEPT</onMatch>
            <onMismatch>DENY</onMismatch>
        </filter>
        <encoder>
	        <pattern>%d %p [%thread] %logger{36} - %msg%n</pattern>
        </encoder>
    </appender>
    <appender name="STDERR" class="ch.qos.logback.core.ConsoleAppender">
        <Target>System.err</Target>
        <filter class="ch.qos.logback.classic.filter.LevelFilter">
            <level>ERROR</level>
            <onMatch>ACCEPT</onMatch>
            <onMismatch>DENY</onMismatch>
        </filter>
        <encoder>
	        <pattern>%d %p [%thread] %logger{36} - %msg%n</pattern>
        </encoder>
    </appender>
    <appender name="STDERR-WARN" class="ch.qos.logback.core.ConsoleAppender">
        <Target>System.err</Target>
        <filter class="ch.qos.logback.classic.filter.LevelFilter">
            <level>WARN</level>
            <onMatch>ACCEPT</onMatch>
            <onMismatch>DENY</onMismatch>
        </filter>
        <encoder>
	        <pattern>%d %p [%thread] %logger{36} - %msg%n</pattern>
        </encoder>
    </appender>

    <appender name="JAVA-TEST-DETECTION-FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>${javaTestDetectionLogFile}</file>
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <fileNamePattern>${javaTestDetectionLogFile}.%d{yyyy-MM-dd}.%i</fileNamePattern>
            <timeBasedFileNamingAndTriggeringPolicy class="ch.qos.logback.core.rolling.SizeAndTimeBasedFNATP">
                <maxFileSize>50MB</maxFileSize>
            </timeBasedFileNamingAndTriggeringPolicy>
        </rollingPolicy>
        <encoder>
	        <pattern>%d %p [%thread] %logger{36} - %msg%n</pattern>
        </encoder>
    </appender>

    <logger name="org.dstovall" level="WARN"/>
    <logger name="org.springframework.context.annotation" level="WARN"/>
    <logger name="org.springframework.beans.factory" level="WARN"/>
    <logger name="org.apache.xbean.spring" level="WARN"/>
    <logger name="org.apache.activemq" level="WARN"/>
    <logger name="org.springframework.jms" level="WARN"/>
    <logger name="org.springframework.core" level="WARN"/>
    <logger name="org.mitre" level="INFO"/>

    <root level="INFO">
        <appender-ref ref="JAVA-TEST-DETECTION-FILE" />
        <!-- <appender-ref ref="STDOUT-INFO"/>-->
        <!-- <appender-ref ref="STDOUT-DEBUG"/> -->
        <!-- <appender-ref ref="STDERR"/> -->
        <appender-ref ref="STDERR-WARN"/>
    </root>
</configuration>
