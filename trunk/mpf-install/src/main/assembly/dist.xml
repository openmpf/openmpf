<assembly>

  <id>dist</id>

  <formats>
    <format>dir</format>
    <!-- <format>tar.gz</format> -->
  </formats>

<!--  <includeBaseDirectory>false</includeBaseDirectory>-->
  <baseDirectory>install</baseDirectory>

  <dependencySets>
    <dependencySet>
      <!-- can only put them under target! -->
      <outputDirectory>jars</outputDirectory>
      <includes>
	<!-- include all dependency jars -->
        <include>*:jar:*</include>
      </includes>
      <excludes>
	<!-- don't want any sources -->
        <exclude>*:sources</exclude>
	<!-- nothing from us, but this doesn't remove the warning :( 
	<exclude>org.mitre.mpf:mpf-install:pom:${project.version}</exclude>
	-->
      </excludes>
    </dependencySet>
  </dependencySets>

  <files>
    <file>
     <source>${basedir}/../node-manager/src/scripts/node-manager</source>
     <outputDirectory>libexec</outputDirectory>
     <fileMode>755</fileMode>
     <filtered>true</filtered>
    </file>
    <file>
     <source>${basedir}/../node-manager/src/scripts/start-nodemanager.sh</source>
     <outputDirectory>bin</outputDirectory>
     <fileMode>755</fileMode>
     <filtered>true</filtered>
    </file>
    <file>
     <source>${basedir}/../node-manager/src/scripts/start-service-java.sh</source>
     <outputDirectory>bin</outputDirectory>
     <fileMode>755</fileMode>
     <filtered>true</filtered>
    </file>
    <file>
     <source>${basedir}/../node-manager/src/scripts/start-java-component.sh</source>
     <outputDirectory>bin</outputDirectory>
     <fileMode>755</fileMode>
     <filtered>true</filtered>
    </file>
    <file>
     <source>${basedir}/../node-manager/src/scripts/log4bash.sh</source>
     <outputDirectory>bin</outputDirectory>
     <fileMode>755</fileMode>
     <filtered>true</filtered>
    </file>
    <file>
     <source>${basedir}/../node-manager/src/scripts/handle-err.sh</source>
     <outputDirectory>bin</outputDirectory>
     <fileMode>755</fileMode>
     <filtered>true</filtered>
    </file>
    <file>
     <source>${basedir}/../node-manager/src/scripts/symlink.sh</source>
     <outputDirectory>bin</outputDirectory>
     <fileMode>755</fileMode>
     <filtered>true</filtered>
    </file>
    <file>
     <source>${basedir}/src/main/scripts/mpf-profile.sh</source>
     <outputDirectory>config</outputDirectory>
     <fileMode>755</fileMode>
     <filtered>true</filtered>
    </file>
    <file>
     <source>${basedir}/../bin/mpf-component-dependency-finder/component_dependency_finder.py</source>
     <outputDirectory>bin</outputDirectory>
     <fileMode>755</fileMode>
     <filtered>true</filtered>
    </file>
  </files>

</assembly>
