<html>
<head>
    <meta http-equiv="refresh" content="2">
    <style>
        table {
            border-collapse: collapse;
        }

        table, th, td {
            border: 1px solid black;
        }

        td {
            padding: 5px;
        }

        .node-list {
            list-style: none;
            font: 14px monospace;
            padding-bottom: 1em;
        }

        .current-connection {
            font-weight: bold;
        }
    </style>
</head>

<body>
    <h2>Cluster participants as of {{creationTime}} </h2>
    <ul class="node-list">
        {{#nodeAddresses}}
            {{#isCurrentConnection}}
                <li>
                    <span class="current-connection"> {{address}} </span>
                    (current browser connection)
                </li>
            {{/isCurrentConnection}}
            {{^isCurrentConnection}}
                <li> {{address}} </li>
            {{/isCurrentConnection}}
        {{/nodeAddresses}}
    </ul>

    {{#managers}}
        <h2>
            NodeManager at {{manager.hostname}} ({{manager.lastKnownState}})
            <a href="{{nodeUri}}"> Connect </a>
        </h2>

        <table border="1">
            <tr>
                <td>Name</td>
                <td>Rank</td>
                <td>State</td>
                <td>Unlaunchable?</td>
                <td>Kind</td>
                <td>Restarts</td>
                <td>Program</td>
                <td>MQ</td>
            </tr>
            {{#serviceDescriptors}}
                <tr>
                    <td> {{service.name}} </td>
                    <td> {{rank}} </td>
                    <td> {{lastKnownState}} </td>
                    <td> {{fatalIssueFlag}} </td>
                    <td> {{service.launcher}} </td>
                    <td> {{restarts}} </td>
                    <td> {{service.cmdPath}} {{service.argumentsString}}</td>
                    <td> {{activeMqHost}} </td>

                </tr>
            {{/serviceDescriptors}}


        </table>
    {{/managers}}

</body>

</html>